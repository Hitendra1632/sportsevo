<script type="application/javascript">
	$(document).ready(function(e) {
       	$("#edit").click(function(e)
		{
			$(this).parents("tr").find('div,#edit').addClass("hide").removeClass("show");
			$(this).parents("tr").find('input,#update').addClass("show").removeClass("hide");
			
		});
		$("#update").click(function(e)
		{
			$(this).parents("tr").find('div,#edit').addClass("show").removeClass("hide");
			$(this).parents("tr").find('input,#update').addClass("hide").removeClass("show");
		});
    });
		
</script>

    
}
@media (max-width:768px){
  body h1 {
  font-size: 2.4em;
  }
  .location img {
  margin: 2em 0;
  width: 59%;
  float: center;
}
.app-location h2 {
  padding: 0.8em 0;
  font-size: 1.6em;
}
.line span {
  top: 10%;
  left: 39%;
  height: 1px;
  width: 20%;
}
.app-location {
    width: 63%;
}
.copy-right {
  padding: 1em 1em;
}
 
}
@media (max-width:640px){
  body h1 {
  font-size: 2.1em;
}
 .app-location {
  width: 69%;
}
